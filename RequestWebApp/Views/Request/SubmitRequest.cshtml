@{
    ViewBag.Title = "Submit Request";
}

<h2>Submit Request</h2>

<form method="post" action="@Url.Action("SubmitRequest", "Request")">
    <div class="form-group">
        <label for="CreatedAt">Created At</label>
        <input type="text" class="form-control" id="CreatedAt" name="CreatedAt" value="@DateTime.Now" readonly />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" name="Status" value="0" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>
